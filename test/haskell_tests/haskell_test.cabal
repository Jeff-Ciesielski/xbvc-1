cabal-version:       >= 2.0.0


test-suite tests
   ghc-options: -Wall
   default-extensions:  OverloadedStrings
   type: exitcode-stdio-1.0
   hs-source-dirs: test, .
   main-is: Spec.hs
   other-modules:       BitvecSpec
                      , Bitvec
                      , Cobs
                      , XBVC
                      , XBVC.Data
                      , XBVC.DataSpec

   build-depends:       base,
                        hspec,
                        bytestring >=0.10 && <0.11,
                        random >=1.1 && <1.2,
                        containers >=0.5 && <0.6,
                        QuickCheck >= 2.12.6.1
   default-language:    Haskell2010
   build-tool-depends: hspec-discover:hspec-discover == 2.*
